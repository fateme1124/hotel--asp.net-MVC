@model hotel.Models.ViewModels.RoomsGroupViewModel
@{
    ViewBag.Title = "Edit";
}


<h2>ویرایش نوع اتاق</h2>



@using (Html.BeginForm("Edit", "RoomsGroups", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.RoomsGroupId)
    @Html.HiddenFor(model => model.ImageName)
    @Html.HiddenFor(model => model.Description)
    <div class="form-group">
        @Html.LabelFor(model => model.RoomsGroupTitle, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.RoomsGroupTitle)
            @Html.ValidationMessageFor(model => model.RoomsGroupTitle)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ImageName, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <img src="/images/rooms-group/@Model.ImageName" class="img60x60" id="impPrev" />
            <input type="file" id="imgupload" name="imgUpload" onchange="showPreview(this)" />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="ذخیره تغییرات" class="btn btn-warning" /> |
            @Html.ActionLink("برگشت به لیست", "Index", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/main-script.js"></script>
}