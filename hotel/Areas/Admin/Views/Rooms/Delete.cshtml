<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.RoomsTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RoomsTitle)
        </dd>
        <dt>
