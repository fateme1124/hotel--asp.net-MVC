
@model hotel.Models.ViewModels.LoginViewModel

@{
    //Layout = "";
    ViewBag.Title = "Login";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ReturnUrl)

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form_bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-offset-4 col-md-4 col-sm-offset-3 col-sm-6 text-center">
                    <form>
                        <div class="user-icon"><i class="fa fa-user-circle"></i></div>
                        <h3 class="title">ورود به حساب کاربری</h3>
                        <div class="form-group">
                            <span class="input-icon"><i class="fa fa-user"></i></span>
                            @Html.EditorFor(model => model.MobileNumber, new { htmlAttributes = new { @class = "form-control form-control1", @placeholder = "شماره موبایل" } })
                            @Html.ValidationMessageFor(model => model.MobileNumber)
                        </div>
                        <div class="form-group">
                            <span class="input-icon"><i class="fa fa-lock"></i></span>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-control1 ", @placeholder = " رمز عبور" } })
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                        <button class="btn signin">ورود</button>
                        <ul class="form-options">
                            <li><a href="#">بازیابی رمز عبور</a></li>
                            <li><a href="#">ایجاد حساب کاربری</a><i class="fa fa-arrow-left"></i></li>
                        </ul>
                    </form>
                </div>
            </div>
        </div>
    </div>

}
}


<script src="~/Scripts/jquery-3.6.0.min.js"></script>
@*<script src="~/Scripts/jquery.validate.min.js"></script>*@
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>